/* pages/proclamation/proclamation.wxss */
.body{
  padding: 10px;
  background-color: white;
  height: auto;
  z-index: 99;
}

.notice {
  width: 100%;
  height: 30px;
  padding: 10px;
  border-radius: 5px;
  border-bottom: 1px dashed #ccc;
}

.notice-id {
  float: left;
  font-size: 18px;
  font-weight: bold;
  margin-right: 10px;
}

.notice-detail {
  float: left;
  font-size: 18px;
  color: #666666;
}
.custom-modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-modal-content {
  background: #fff;
  padding: 20px;
  width: 80%;
  max-width: 300px;
  border-radius: 10px;
}

.custom-modal-textarea {
  margin: 10px;
  padding: 10px;
  width: 90%;
  min-height: 50px;
  border: 1px dashed #ccc;
}

.custom-modal-buttons {
  display: flex;
  justify-content: space-between;
}
.add-notice-button{
  margin: 10px;
  background-color: rgb(221, 219, 219);
}