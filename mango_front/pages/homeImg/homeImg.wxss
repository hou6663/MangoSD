.container{
  background-color: white;
}
.item {
  padding: 10px 0;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.item_id {
  margin-left: 10px;
  background-color: #eaeaea;
  padding: 5px 10px;
  border-radius: 5px;
  margin-right: 5px;

}

.text {
  color: #333;
  font-weight: bold;
  width: 30px;
}

.item_img {
  position: relative;
  width: 340px;
  height: 200px;
}

.img {
  width: 100%;
  height: 100%;
}
.edit-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;  /* 你的编辑图标的宽度 */
  height: 40px;  /* 你的编辑图标的高度 */
  padding-right: 15px;
}
